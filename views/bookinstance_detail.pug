extends layout 

block content 

    h1 ID:  #{bookinstance._id}

    p #[strong Título: ]
        a(href=bookinstance.book.url) #{bookinstance.book.title}
    p #[strong Impresso: ] #{bookinstance.imprint}

    p #[strong Situação: ]
        if bookinstance.status=='Available'
            span.text-success  ( Disponível ) 
        else if bookinstance.status=='Maintenance'
            span.text-danger  ( Manutenção )
        else 
            span.text-warning  ( Emprestado )
    if bookinstance.status !='Available'
        // span (Pego: #{bookinstance.due_back} )
        p #[strong Pego: ]#{bookinstance.due_back_formatted}
    
    hr
    p 
        a.text-warning(href=bookinstance.url+'/update') #[strong Atualizar Cópia]
    p
        a.text-danger(href=bookinstance.url+'/delete') #[strong Deletar Cópia]