extends layout 

block content  
    h1 #{title}: #{author.name}
    p= author.lifespan

    if author_books.length 
        p.text-danger #[strong Delete os livros deste autor antes de tentar deleta-lo.]

        div(style='margin-left:20px;margin-top:20px')
            
            h4 Livros

            dl
            each book in author_books
                dt
                    a(href=book.url) #{book.title}
                dd #{book.summary}
    else
        p VocÃª realmente quer deletar este autor? 

        form(method='POST' action='')
            div.form-group
                input#authorid.form-control(type='hidden', name='authorid', value=author._id)

            button.btn.btn-primary(type='submit') #[strong Deletar]